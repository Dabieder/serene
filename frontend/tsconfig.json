{
  "compileOnSave": false,
  "compilerOptions": {
    // "noUnusedLocals": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@root/*": ["app/*"],
      "@shared/*": ["../../shared/*"]
    },
    "lib": ["es2018", "dom"]
  }
}
